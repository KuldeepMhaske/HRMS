@{
    ViewData["Title"] = "HRMS Login";
}

<div class="auth-bg">
    <div class="glass-card p-4" style="width: 380px;">
        <h4 class="text-center mb-4">HRMS Login</h4>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input name="username"
                       class="form-control"
                       placeholder="Enter username"
                       required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password"
                       name="password"
                       class="form-control"
                       placeholder="Enter password"
                       required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <button type="submit" class="btn btn-success w-100">
                Login
            </button>

            <a asp-action="Signup"
               class="btn btn-primary w-100 mt-2">
                Create New Account
            </a>

            <div class="text-center mt-3">
                <a asp-action="ForgotPassword">
                    Forgot password?
                </a>
            </div>
        </form>
    </div>
</div>

<!-- ✅ SUCCESS POPUP AFTER SIGNUP -->
@if (TempData["Success"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: '@TempData["Success"]',
            confirmButtonColor: '#28a745'
        });
    </script>
}
