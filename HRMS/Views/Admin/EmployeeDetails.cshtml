@model HRMS.Models.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="container-fluid mt-3">

    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">

            <div class="card shadow border-0">

                <!-- HEADER -->
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">👤 Employee Details</h5>
                </div>

                <!-- BODY -->
                <div class="card-body p-3">

                    <table class="table table-sm table-borderless mb-0">
                        <tr>
                            <th class="text-muted" style="width:40%">Employee Code</th>
                            <td class="fw-semibold">@Model.EmpCode</td>
                        </tr>

                        <tr>
                            <th class="text-muted">Full Name</th>
                            <td>@Model.First_Name @Model.Last_Name</td>
                        </tr>

                        <tr>
                            <th class="text-muted">Email</th>
                            <td>@Model.Email</td>
                        </tr>

                        <tr>
                            <th class="text-muted">Phone</th>
                            <td>@Model.Phone</td>
                        </tr>

                        <tr>
                            <th class="text-muted">Status</th>
                            <td>
                                <span class="badge rounded-pill
                                      @(Model.IsActive ? "bg-success" : "bg-danger")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                        </tr>
                    </table>

                </div>

                <!-- FOOTER -->
                <div class="card-footer text-end bg-light">
                    <a asp-action="Employees" class="btn btn-secondary btn-sm">
                        ⬅ Back
                    </a>
                </div>

            </div>

        </div>
    </div>

</div>
